--turtle.turnRight()
--turtle.turnRight()
--we are already facing backwards
--now we want to retrieve the anchor
--that was keeping us loaded
for i = 0,9 do
  turtle.forward()
end
turtle.turnLeft()--it will be on its left
turtle.select(1)--select slot 1
turtle.dig()
turtle.select(4) --place ender pearls in slot 4
turtle.suck()--retrieve ender pearls
turtle.turnLeft()--heading back
turtle.select(1)
for i = 0,9 do
  turtle.forward()
end
turtle.turnRight()
turtle.place()
turtle.drop(4)--give anchor ender pearls
