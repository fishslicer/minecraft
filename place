--places the 3 initial blocks...
--then turns around via right
turtle.turnRight()--turn right and..
turtle.up()
turtle.select(1)--select anchor
turtle.place()--place anchor
turtle.select(4)--select pearls
turtle.drop()--put pearls in anchor
for i =2,3 do--place blocks in slot 1..3
  turtle.up()
  turtle.select(i)
  turtle.place()
end
turtle.turnRight()
turtle.select(1)
for i=1,3 do
  turtle.down()
end

